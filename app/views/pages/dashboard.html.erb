<div class="row">
	<h1 class="text-center">Dashboard</h1>
	<div class="col-md-4">
		<h3 class="text-center">
			For Sale   <%= link_to "add book", new_book_path, class: "btn btn-primary btn-xs" %>
		</h3>
		<table class="table table-condensed">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Available?</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      	<% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= link_to book.name, book_path(book) %></td>
          <td><%= book.availability %></td>
          <td><%= link_to "edit", edit_book_path(book) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
	</div>
	<div class="col-md-4">
		<h3 class="text-center">Bought</h3>
	</div>
	<div class="col-md-4">
		<h3 class="text-center">Sold</h3>
	</div>
</div>