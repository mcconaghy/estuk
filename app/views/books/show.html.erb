<div class="row">
  <div class="col-sm-4">
    <%= image_tag "book.jpg", class: "img-responsive" %>
  </div>
  <div class="col-sm-8">
    <h3><%= @book.name %> by <%= @book.author %></h3>
    <p><%= @book.description %></p>
    <h4 class="text-center"><%=  number_to_currency(@book.price.to_f / 100, precision:2) %></h4>
  </div>
</div>



<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %>
