<div class="col-md-3">
  <div class="thumbnail">
  	<%= link_to book_path(book) do %>
    <%= image_tag "book.jpg", class: "img-responsive" %>
    <% end %>
    <div class="caption">
      <h4><%= link_to book.name, book_path(book) %></h4>
      <p><%= number_to_currency(book.price.to_f / 100) %></p>
    </div>
  </div>
</div>